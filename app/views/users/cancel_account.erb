 <div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center"><i style="font-size:35px" class="fa fa-check-circle-o fa-3x"></i>Cancellation of Account</h1>
      <hr>
    </div>
    <%if @user.cancel_account_token == @token %>
      <div class="col-md-6 col-md-offset-3">
        <p class="text-center">
          Please enter your password to confirm
        </p>
      </div>
      <div class="col-md-4 col-md-offset-4" style="padding-top:30px">
      <%= form_tag(cancel_account_action_path, :method=>'post') do %>
        <div class="form-group" style="padding:30px">
          <%= password_field :user, "password",  class: "form-control", placeholder:"Introduce your Password" %>
          <%= hidden_field_tag 'token', @token %>
        </div>
        <div class="col-md-12" style="text-align:center;">
          <%= submit_tag 'Cancel my Account', class: "btn btn-warning btn-lg" %>
        </div>
      <% end %>
      </div>
    <% else %>
      <div class="col-md-6 col-md-offset-3">
        <p class="text-center">
          Account cancellation request invalid
        </p>
      </div>
    <% end %>
  </div>
 </div>