  <%= javascript_include_tag "chosen.jquery.min" %> 
  <%= javascript_include_tag "edit_profile" %> 
  <%= stylesheet_link_tag  "chosen" %>
  <%
    text = {}
    if current_user.current?
      text['current_job'] = 'Job Prior to Kellog '
      text['programs'] = 'Program You Are Enrolled In (*)'
      text['previous'] = 'Please Select Industry You Would Like to Work in After Kellog'
      text['brand'] = 'Please Select Function You Want to Have After Kellogg'
    else
      text['current_job'] = 'Current Job Information'
      text['programs'] = 'Programs of Interest (*)'
      text['previous'] = 'Please Select Your Industry of Interest'
      text['brand'] = 'Please Select Your Function of Interest'
    end

  %>
<div class="container-fluid">
    
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center title-sub ">
        <span >Welcome to You@Kellogg</span>
    </h1>
    <hr  class="visible-xs">
  </div>

  <div class="col-md-10 col-md-offset-2">
    <dl class="faq" style="counter-increment: my-badass-counter+1;">
      <dd style="padding-bottom:33px;font-size:20px"><strong>Tell us a little about yourself</strong>. </dd>
    </dl>

    <p class="col-md-10"><span class="pull-right">Requires Fields (*)</span></p>

    <%= form_tag("/users/#{@user.id}", method: 'patch', id: 'edit_profile' , class: 'form-horizontal') do %>
    <% if current_user.user_rights? %>
      <%= hidden_field_tag 'right', current_user.user_rights %>
    <% elsif params["t"] == "crnt" %>
      <%= hidden_field_tag 'right', 1 %>
    <% else %>
      <%= hidden_field_tag 'right', 0 %>
    <% end %>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

    <div class="form-group">
      <div class="col-md-10">
        <b>Contact Information</b>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10">
        <%= text_field_tag :email, current_user.email, placeholder:'Email Address', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-5">
        <%= text_field_tag :first_name, current_user.first_name, placeholder:'First Name (*)', class: 'form-control' %>
      </div>
      <div class="col-md-5">
        <%= text_field_tag :last_name, current_user.last_name, placeholder:'Last Name (*)', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10">
      <hr>
        <b><%=text['current_job']%></b>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-5">
        <%= select_tag(:country_id, options_from_collection_for_select(Country.all, :id, :name, current_user.country_id), prompt: 'Please select your current country (*)', id:'state_select', class: 'form-control ') %>
      </div>
      <div class="col-md-5">
        <%= select_tag(:state, options_for_select(@states, current_user.state), prompt: 'Please select your current state (*)(only US)', class: 'form-control hidden') %>
         <%= password_field :password, current_user.password, placeholder:'Please select your current password', id:'state_text', class: 'form-control' %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-md-5">
        <%= select_tag(:current_industry_id, options_from_collection_for_select(Industry.all, :id, :name, current_user.current_industry_id), prompt: 'Please select your current job industry (*)', class: 'form-control') %>
      </div>
      <div class="col-md-5">
        <%= select_tag(:current_function_id, options_from_collection_for_select(Function.all, :id, :name, current_user.current_function_id), prompt: 'Please select your current job function (*)', class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10">
        <hr>
        <b>MBA and Job Interest Information</b>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10">
        <b><%=text['programs']%></b>
      </div>
    </div>


    <div class="form-group">
      <div class="col-md-10">
        <%= collection_check_boxes(:user, :program_ids, Program.all, :id, :name, {}, {}) do |b| %>
          <div class="col-md-4">
            <div class="checkbox"> 
              <%=  b.label(:"data-value" => b.value) { b.check_box + b.text } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% 
     if(current_user.user_rights == Role::PROSPECTIVE) 
      text_for_industry = 'Please select your industry of interest'
      text_for_funtion = 'Please select your function of interest'
     else
      text_for_industry = text['previous']
      text_for_funtion = text['brand']
     end
    %>
    <div class="form-group">
      <div class="col-md-5">
        <%= select_tag(:interest_industry_id, options_from_collection_for_select(Industry.all, :id, :name, current_user.interest_industry_id), prompt: text_for_industry, class: 'form-control') %>
      </div>
      <div class="col-md-5">
        <%= select_tag(:interest_function_id, options_from_collection_for_select(Function.all, :id, :name, current_user.interest_function_id), prompt: text_for_funtion, class: 'form-control') %>
      </div>
    </div>

    <div>&nbsp;</div>
    <div class="form-group">
      <div class="col-md-10">
        <b>Professional Clubs of Interest - Max 3.</b>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10">

        <%= select_tag(:club_ids, options_from_collection_for_select(Club.where(type_club: "Professional"), :id, :name, current_user.club_ids), placeholder: 'Please select your function of interest', class: 'chosen-select form-control', multiple: true, "data-placeholder" => "Professional Clubs of Interest") %>

      </div>
    </div>

    <div>&nbsp;</div>
    <div class="form-group">
      <div class="col-md-10">
        <b>Affinity Clubs of Interest - Max 3.</b>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10">

        <%= select_tag(:club_ids, options_from_collection_for_select(Club.where(type_club: "Affinity"), :id, :name, current_user.club_ids), placeholder: 'Please select your function of interest', class: 'form-control chosen-select', multiple: true, "data-placeholder" => "Affinity Clubs of Interest") %>

      </div>
    </div>
    <div class="clearfix"></div>
    <div>&nbsp;</div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-6" style="text-align: center;">
        <%= submit_tag "Save and go to my Profile", class: 'btn btn-warning',style: "margin-top: 20px;" %>
      </div>
    </div>
  <% end %>
    
  </div>
</div>
