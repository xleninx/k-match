 <div class="container-fluid">

  <%= form_tag(search_user_path, :method=>'get', style:"padding-top:10px;margin-right: 9px", class: "form-horizontal pull-right col-md-2") do %>
    <div class="input-group  input-group-sm">
      <span class="input-group-addon"><i class="fa fa-search"></i></span>
      <%= text_field_tag "search", "", class: "form-control", placeholder: "Search" %>
    </div>
  <% end %>
   <div class="clearfix"></div> 
 <hr>

<div class="container-fluid">
  <div class="row-connect">
   
  <% unless @user.count > 0 %>
    <p class="text-center" style="font-size:20px">No results found</p>
  <% end %> 

   <% @user.each do |u| %> 
    <div class="row row-profile" >
      <div class="col-md-8">      
        <h3><%= u.full_name %></h3>
        <p><%= u.rigths_string %></p>
        <div class="clearfix"></div>       
      </div>
      <div class="col-md-4 ">
        <div class="pull-right" >
          <%= form_tag(update_role_path, :method=>'get', class: "form-horizontal", style: "padding-top:30px") do %>
            <div class="form-group">
              <%= select_tag(:user_role, options_for_select(Role.to_a, u.user_rights), prompt: 'Select Status', class: 'form-control',:onchange => "this.form.submit();") %>
              <%= hidden_field_tag :user_id, u.id %>
            </div>
          <% end %>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    <% end %>
  </div> 
</div>

</div>  