
<div class="container-fluid">
  
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Forgot your password?</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control" , placeholder:"test@mydomin.com"%></div>

      <div class="text-center"><%= f.submit "Send me reset password instructions" , class: "btn btn-warning", style:"margin-top:20px"%></div>
    <% end %>
  </div>

  
</div>

