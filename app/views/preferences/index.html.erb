<div class="page-header">
  <h1>Preferences</h1>
</div>

<p><%= link_to 'Add a New Preference', new_preference_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Interest</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.user_id %></td>
        <td><%= preference.interest_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, preference_url(preference), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_preference_url(preference), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, preference_url(preference), method: 'delete', data: { confirm: "Do you really want to delete this preference?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

